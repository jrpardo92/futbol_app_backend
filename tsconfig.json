{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "*": ["*"]
      }
    },
    "include": [
      "config/**/*",
      "controllers/**/*",
      "models/**/*",
      "routes/**/*",
      "middlewares/**/*",
      "services/**/*",
      "utils/**/*",
      "database/**/*",
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }